    android:layout_width="wrap_content"
    android:padding="8dp"
    android:alpha="0.9"
    android:background="@drawable/login_button_style"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/toast_text"
        android:layout_width="wrap_content"
        android:maxWidth="200dp"
