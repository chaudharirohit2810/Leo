<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.leo_kotlin.ui.login.LoginFragment"
        tools:layout="@layout/fragment_login"
        android:label="LoginFragment" >
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_loginFragment_to_mainFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:destination="@id/mainFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_loginFragment_to_permissionRequestFragment2"
            app:destination="@id/permissionRequestFragment"
            app:popUpTo="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.leo_kotlin.ui.register.RegisterFragment"
        tools:layout="@layout/fragment_register"
        android:label="RegisterFragment" >
        <action
            android:id="@+id/action_registerFragment_to_emergencyContactsFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:destination="@id/emergencyContactsFragment" />
    </fragment>
    <fragment
        tools:layout="@layout/fragment_main"
        android:id="@+id/mainFragment"
        android:name="com.example.leo_kotlin.ui.main.MainFragment"
        android:label="MainFragment" >
        <action
            android:id="@+id/action_mainFragment_to_mapsFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:destination="@id/mapsFragment" />
        <action
            android:id="@+id/action_mainFragment_to_emergencyContactsFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:destination="@id/emergencyContactsFragment" />
        <action
            android:id="@+id/action_mainFragment_to_loginFragment2"
            app:enterAnim="@anim/slide_in_left"
            app:exitAnim="@anim/slide_out_right"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/mapsFragment"
        android:name="com.example.leo_kotlin.ui.map.MapsFragment"
        android:label="fragment_maps"
        tools:layout="@layout/fragment_maps"
         />
    <fragment
        android:id="@+id/emergencyContactsFragment"
        android:name="com.example.leo_kotlin.ui.emergencyContacts.EmergencyContactsFragment"
        tools:layout="@layout/fragment_emergency_contacts"
        android:label="EmergencyContactsFragment" >
        <argument
            android:name="registeredUser"
            app:argType="com.example.leo_kotlin.models.User"/>
        <argument
            android:name="isFromMain"
            app:argType="boolean" />
        <action
            android:id="@+id/action_emergencyContactsFragment_to_mainFragment"
            app:destination="@id/mainFragment"
            app:popUpTo="@id/emergencyContactsFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_emergencyContactsFragment_to_permissionRequestFragment2"
            app:destination="@id/permissionRequestFragment"
            app:popUpTo="@id/emergencyContactsFragment" />
    </fragment>
    <fragment
        android:id="@+id/splashFragment"
        android:name="com.example.leo_kotlin.ui.splash.SplashFragment"
        android:label="SplashFragment" >
        <action
            android:id="@+id/action_splashFragment_to_loginFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_splashFragment_to_mainFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true"
            app:destination="@id/mainFragment"
            />
    </fragment>
    <fragment
        android:id="@+id/permissionRequestFragment"
        android:name="com.example.leo_kotlin.ui.permissionRequest.PermissionRequestFragment"
        android:label="fragment_permission_request"
        tools:layout="@layout/fragment_permission_request" >
        <action
            android:id="@+id/action_permissionRequestFragment_to_mainFragment2"
            app:destination="@id/mainFragment"
            app:popUpTo="@id/permissionRequestFragment" />
    </fragment>
</navigation>